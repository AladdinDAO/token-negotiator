{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "target": "es2020",
    "module": "es6",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "examples"]
}